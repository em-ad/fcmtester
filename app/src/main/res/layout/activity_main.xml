<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_get_token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        android:padding="12dp"
        android:text="Get Token"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_get_token"
        android:layout_marginTop="18dp"
        android:gravity="start"
        android:textColor="#000"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_token"
        android:layout_marginTop="50dp"
        android:gravity="right|center_vertical"
        android:orientation="horizontal"
        android:id="@+id/linear_add"
        android:weightSum="5">

        <TextView
            android:id="@+id/tv_add_topic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:padding="14dp"
            android:text="+"
            android:textColor="#fff"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="#eee"
            android:gravity="center"
            android:hint="write topic here..."
            android:padding="12dp"
            android:textSize="14sp"
            android:textColor="#000"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_add"
        android:layout_marginTop="50dp"
        android:gravity="right|center_vertical"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:id="@+id/tv_remove_topic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:padding="14dp"
            android:text="-"
            android:textColor="#fff"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="#eee"
            android:gravity="center"
            android:hint="write topic here..."
            android:padding="12dp"
            android:textSize="14sp"
            android:textColor="#000"
            android:textStyle="normal" />

    </LinearLayout>
</RelativeLayout>